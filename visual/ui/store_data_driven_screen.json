{
  "namespace": "store_layout",

  "profile_bg": {
    "type": "image",
    "fill": true,
    "texture": "textures/ui/profile_bg"
  },

  "store_data_driven_screen_base": {
    "$screen_bg_content": "store_layout.profile_bg",
    "variables": [
      {
        "requires": "(not $use_animation)",
        "$screen_animations": [],
        "$background_animations": []
      },
      {
        "requires": "($use_animation)",
        "$screen_animations": [
          "@common.screen_exit_animation_pop_offset",
          "@common.screen_exit_animation_pop_fade",
          "@store_layout.screen_entrance_pop_animation_no_offset"
        ],
        "$fill_alpha": 0.75
      }
    ]
  }
}